<script type="text/javascript">
    function setLevel(levelId)    {
        $("#levelIndex").val(levelId);
    }

    function deleteLevel(levelId) {
        $("#" + levelId).remove();
    }

    $('.deleteChar').click(function (e) {
        e.preventDefault();
        var x = $(this).prev().attr('id');
        $("#" + x).remove();
        $(this).remove();
    });
    $(document).ready(function () {

        $('ul li a').each(function () {
            $(this).prepend('&nbsp;');
        });

    });
</script>
