@model ExpertAssessment.WebUI.Models.NewHierarchyModel
           @*"CreateNewHierarchy","Hierarchy",FormMethod.Post *@
@using (Html.BeginForm("Action", "Hierarchy"))
{ 
    
    <input id="levelIndex" type="hidden" name="levelIndex" />
    
    <div class="container">
        <div class="reg-header">New hierarchy </div>
        <div class="reg-body">
            @Html.LabelFor(x => x.HierarchyTitle, "Enter the new hierarchy title")
            @Html.TextBoxFor(x => x.HierarchyTitle)
            @Html.ValidationMessageFor(x => x.HierarchyTitle)

            @Html.LabelFor(x => x.HierarchyGoal, "Your goal for this hierarchy is")
            @Html.TextBoxFor(x => x.HierarchyGoal)
            @Html.ValidationMessageFor(x => x.HierarchyGoal)
        </div>
        <div class="reg-footer">
             @Html.EditorFor(m => m.LevelCharacteristics)
                
            <input type="submit" name="AddNewLevel" value="Добавить уровень" />
            <input type="submit" name="SaveDatShit" value="Сохранить" />
