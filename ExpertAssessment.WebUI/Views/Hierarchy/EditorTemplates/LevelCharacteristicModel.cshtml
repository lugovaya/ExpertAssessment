@model ExpertAssessment.WebUI.Models.LevelCharacteristicModel

@{
    Model.IsActive = true;
 }
    <table class="table-condensed" id="level@(Model.Id)">
        <tr>
            <td>
                @Html.HiddenFor(m=>m.Id)
                @Html.LabelFor(m=>m.Id, "Level " + Model.Id)            
            </td>
            <td>
                <ul id="chars">
                    @for (int i=0;i<Model.Values.Count;i++) {
                        <li>@Html.EditorFor(c => c.Values[i])</li>     
                   }
                </ul>            
            </td>
            <td>
                @Ajax.ActionLink("Add characteristic", "AddNewCharacteristic", new 
               { 
                   levelIndex = Model.Id                 
                   
               }, new AjaxOptions()
               {
                   UpdateTargetId = "chars",
                   HttpMethod = "POST",
                   InsertionMode = InsertionMode.InsertAfter
               }, new { @class = "btn", id = "level" + Model.Id  })
              @*<input class="AddNewCharacteristic" type="submit" name="AddNewCharacteristic" value="Добавить характеристику" />*@
            </td>
        </tr>
</table>

